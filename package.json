{
  "name": "flyclash-ui",
  "version": "0.1.1",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"cross-env npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron": "electron .",
    "electron:build": "next build --no-lint && electron-builder",
    "electron:build:ignore-ts": "set NEXT_TELEMETRY_DISABLED=1 && set NEXT_IGNORE_TYPE_ERROR=1 && next build && electron-builder",
    "electron:build:prod": "set NEXT_TELEMETRY_DISABLED=1 && set NEXT_PUBLIC_BASE_PATH=./ && next build && electron-builder",
    "clean": "node clean.js",
    "clean:build": "node clean.js && next build --no-lint && electron-builder",
    "clean:build:prod": "node clean.js && set NEXT_TELEMETRY_DISABLED=1 && set NEXT_PUBLIC_BASE_PATH=./ && next build && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@types/js-yaml": "^4.0.9",
    "antd": "^5.24.6",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "finalhandler": "^2.1.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.487.0",
    "next": "^14.0.4",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "run": "^1.5.0",
    "serve-static": "^2.2.0",
    "sonner": "^2.0.3",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.18.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "file-loader": "^6.2.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.flyclash.app",
    "productName": "FlyClash",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "cores",
        "to": "cores"
      },
      {
        "from": "public",
        "to": "public"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    }
  }
}
